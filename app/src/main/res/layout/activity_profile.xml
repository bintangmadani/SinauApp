<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="-32dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="413dp"
            android:layout_height="290dp"
            android:background="@drawable/radius_profile">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view1"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp"
                    android:layout_marginStart="240dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/qrcode"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view3"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/akaricon"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/imgArif"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/arif">

            </ImageView>

            <TextView
                android:id="@+id/txtArief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arief_muhammad"
                android:textSize="65px"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/MaleProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male - 17 y.0"
                android:textSize="40px"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="">

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/TILprofileAssignment"
               android:layout_width="155dp"
               android:layout_height="130dp"
               android:background="@drawable/radius_assignment"
               android:layout_marginStart="37dp"
               android:layout_marginTop="25dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txtAssignment"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/assignment"
                       android:textSize="35px"
                       android:layout_marginStart="15dp"/>

                   <ImageView
                       android:id="@+id/imgLove"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/love"
                       android:layout_marginStart="40dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txt98"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/_98"
                       android:textSize="80px"
                       android:textStyle="bold"
                       android:layout_marginStart="15dp"
                       android:layout_marginTop="35dp"/>

                   <TextView
                       android:id="@+id/done"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/done"
                       android:textSize="40px"
                       android:layout_marginStart="10dp"
                       android:layout_marginTop="33dp"/>

               </LinearLayout>

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/TILprofileAttendance"
               android:layout_width="155dp"
               android:layout_height="130dp"
               android:background="@drawable/radius_attendance"
               android:layout_marginStart="30dp"
               android:layout_marginTop="25dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txtAttendance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/attendance"
                       android:textSize="35px"
                       android:layout_marginStart="15dp"/>

                   <ImageView
                       android:id="@+id/imgBulan"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/bulan"
                       android:layout_marginStart="40dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txt10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/_10"
                       android:textSize="80px"
                       android:textStyle="bold"
                       android:layout_marginStart="15dp"
                       android:layout_marginTop="35dp"/>

                   <TextView
                       android:id="@+id/hour"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/hour"
                       android:textSize="40px"
                       android:layout_marginStart="10dp"
                       android:layout_marginTop="33dp"/>

               </LinearLayout>


           </com.google.android.material.textfield.TextInputLayout>

       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

        <Button
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:background="@drawable/radius_student_id"
            android:text="@string/student_id"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:background="@drawable/radius_school_information"
            android:text="@string/school_information"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginStart="23dp"
            android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>